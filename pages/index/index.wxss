/* pages/index/index.wxss */
.theme{
    width: 100%;
    height: 60rpx;
    font-size: 28rpx;
    font-weight: bold;
    line-height: 60rpx;
    color: #777777;
    background-color: #ffffff;
    text-align: left;
    padding-left: 30rpx;
    box-sizing: border-box;
    border-bottom: 4rpx #E2E2E2 solid;
}

.latest{
    width: 100%;
}

.latest_item{
    width: 100%;
    float: left;
    border-bottom: 4rpx #e2e2e2 solid;
    padding: 20rpx 30rpx 20rpx 30rpx;
    box-sizing: border-box;
}

.latest_top{
    width: 100%;
}

.latest_img{
    display: block;
    width: 60rpx;
    height: 60rpx;
    border: 2rpx #cccccc solid;
    border-radius: 50%;
    margin-top: 9rpx;
    float: left;
}

.latest_con{
    float: left;
    margin-left: 30rpx;
}

.replies_num{
    float: right;
}

.replies_text{
    font-size: 22rpx;
    color: #ffffff;
    font-weight: 700;
    padding: 2rpx 20rpx;
    box-sizing: border-box;
    background-color: #aab0c6;
    border-radius: 20rpx;
}

.info_title{
    font-size: 22rpx;
    color: #999999;
    background-color: #f5f5f5;
    padding: 6rpx 12rpx;
    box-sizing: border-box;
    border-radius: 6rpx;
}

.info_dot{
    font-size: 22rpx;
    line-height: 22rpx;
    font-weight: bold;
    color: #777777;
    margin-left: 8rpx;
    margin-right: 8rpx;
}

.info_username{
    font-size: 24rpx;
    line-height: 22rpx;
    font-weight: bold;
    color: #778087
}

.latest_time .time{
    font-size: 22rpx;
    color: #778087;
    line-height: 20rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.latest_bottom{
    width: 100%;
    float: left;
    margin-top: 10rpx;
}

.latest_title{
    width: 100%;
    font-size: 28rpx;
    color: #778087;
    float: left;
    display: block;
    word-break: break-all;
    word-wrap: break-word
}

.latest_reply{
    float: right;
    font-size: 24rpx;
    color: #778087;
    margin-top: 8rpx;
}

.reply_text{
    font-size: 22rpx;
    color: #cccccc;
}

.reply_name{
    font-weight: bold;
}

/* 暂无更多 */
.hasNoMore{
    width: 100%;
    height: 100rpx;
    text-align: center;
}

.noMore_text{
    font-size: 28rpx;
    line-height: 100rpx;
    color: #999999;
}